{
  "useTabs": true,
  "singleQuote": true,
  "tabWidth": 4,
  "trailingComma": "none",
  "printWidth": 100,
  "overrides": [
    {
      "files": ["*.svelte"],
      "options": {
        "bracketSameLine": false
      }
    },
    {
      "files": ["**/README.md"],
      "options": {
        "useTabs": false,
        "tabWidth": 2
      }
    },
    {
      "files": ["**/CHANGELOG.md"],
      "options": {
        "requirePragma": true
      }
    }
  ]
}
